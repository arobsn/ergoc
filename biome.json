{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "ignore": ["**/dist/*", "**/bin/*", "**/node_modules/*", "**/package.json"]
  },
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "indentStyle": "space",
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "trailingCommas": "none"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "recommended": true,
        "noParameterAssign": "off",
        "noYodaExpression": "error"
      },
      "correctness": {
        "recommended": true,
        "noUnusedImports": "error",
        "noUnusedVariables": "error"
      },
      "suspicious": {
        "recommended": true,
        "noConsoleLog": "off",
        "noAssignInExpressions": "off"
      }
    }
  }
}
